modules = ["nodejs-20", "postgresql-16"]
[nix]
channel = "stable-25_05"
packages = ["unzip", "chromium", "glib", "nspr", "nss", "dbus", "xorg.libX11", "xorg.libXcomposite", "xorg.libXdamage", "xorg.libXext", "xorg.libXrandr", "xorg.libxcb", "cups", "expat", "at-spi2-atk", "alsa-lib", "pango", "cairo", "libxkbcommon", "mesa", "gtk3", "libgbm"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Arapoint"

[[workflows.workflow]]
name = "Arapoint"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Arapoint && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[userenv]

[userenv.shared]
SENDGRID_FROM_EMAIL = "noreply@arapoint.com.ng"
